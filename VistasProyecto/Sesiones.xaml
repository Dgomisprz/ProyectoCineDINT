<UserControl x:Class="VistasProyecto.Sesiones"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VistasProyecto"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        
        
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" DockPanel.Dock="Bottom">
            <Button Content="añadir" Margin="0,0,10,0" Command="{Binding Path=DialogoAñadirSalaCommand}/>
            <Button Content="Modificar" Command="{Binding Path=DialogoAñadirSesionCommand}/>
            <Button Content="Eliminar" Command="{Binding Path=DialogoEliminarSesionCommand}/>
        </StackPanel>
    </DockPanel>
</UserControl>
